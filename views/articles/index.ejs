<h1 class="mb-4">Articles</h1>

<% articles.forEach(article=> { %>
<div class="card mt-4">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h4 class="card-title">
          <%= article.title %>
        </h4>
        <div class="card-subtitle text-muted mb-2">
          <%= article.createdAt.toLocaleDateString() %>
        </div>
        <div class="card-text mb-2">
          <%= article.description %>
        </div>
      </div>
      <div class="col col-sm-4">
        <a href="/articles/<%= article.slug %>" class="btn btn-primary mb-2">Read More</a>
      </div>
    </div>
  </div>
</div>
<% }) %>