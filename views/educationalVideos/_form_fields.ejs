<div class="form-group">
  <label for="title">Title</label>
  <input required value="<%= educationalVideo.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
  <label for="videoUrl">Video Url</label>
  <input required value="<%= educationalVideo.videoUrl %>" type="text" name="videoUrl" id="videoUrl" class="form-control">
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea required name="description" id="description" class="form-control">
    <%= educationalVideo.description %>
  </textarea>
</div>

<a href="/educationalVideos" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
